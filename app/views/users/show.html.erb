<h1 style="font-size: 30px; text-align:center; padding:30px;">All Donations History </h1>

<% for i in @all_donations %>
<% c=1 %>
    <p style="font-size: 30px; text-align:center; padding:30px;" > 
        <%=c %>)    

        <%= i.blood_group_name %> &nbsp; <%= i.unit %> &nbsp; <%= i.created_at %>
        <% c+=1 %>
    </p>
<% end %>
<%= will_paginate @all_donations, :page_links => false, class:"page-item active", style: "padding-left:750px; font-size:30px; padding-top:100px; " %>
